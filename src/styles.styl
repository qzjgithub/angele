@import "styles/define.styl"
@import "styles/arrow.styl"
@import "styles/common.styl"
@import "styles/button.styl"
@import "styles/input.styl"
@import "styles/select.styl"
@import "styles/tree.styl"

.form-title
  font-size: 20px
  margin: 16px

/**
form-aside start
 */
.form-aside
  position: absolute
  right: 16px
  top: 4px

.button-aside
  color: #666666
  opacity: 0.4
  width: 55px
  z-index: 200

.button-aside:hover
  opacity: 1

.button-aside>div
  box-sizing: border-box
  cursor: pointer

.button-aside>ul
  height: 0
  overflow: hidden
  transition: height linear 500ms

/**
form-aside end
 */
/**
form-footer start
 */
.form-footer
  padding-left: 185px

.form-footer>button
  margin-right: 8px

/**
form-footer end
 */
/*********************form end*************************/
/*********************frame start*************************/
.small-arrow
  display: block
  height: 8px
  width: 8px
  border-right: 1px solid #666666
  border-bottom: 1px solid #666666
  cursor: pointer

.small-arrow:before
  content: ''
  display: block
  width: 8px
  transform: rotate(42deg)
  transform-origin: left bottom
  border: 1px solid #999999

/*********************frame end*************************/
/*********************empty button start*************************/
.empty-button
  margin: auto
  display: block
  margin-top: 80px
  height: 50px
  font-size: 26px
  padding: 0 16px
  opacity: 0.4
  padding-bottom: 2px

.empty-button:hover
  opacity: 0.8

.empty-button>i
  display: inline-block
  margin-left: 8px

.empty-button>i:before
  content: ''
  height: 16px
  display: inline-block
  border-right: 2px solid #666666

.empty-button>i:after
  content: ''
  width: 16px
  height: 16px
  display: inline-block
  border-bottom: 2px solid #666666
  position: relative
  bottom: 7px
  right: 9px

/*********************empty button end*************************/
/*********************list header start*************************/
.list-header
  margin: 0 8px

.list-header .empty-button
  transform: scale(0.6)
  margin: 0 0 -9px -33px
  display: inline-block
  opacity: 1
  bottom: 0

.list-header .empty-button:hover
  opacity: 1

.list-header button
  position: relative
  bottom: 4px

.list-header button:nth-child(2)
  margin-left: -25px

/*********************list header end*************************/
/*********************project start*************************/
.list-project.manage .form-content
  pointer-events: none
  cursor: default

.list-project.manage .com-frame>aside:hover>ul.show
  margin-left: 55px

.project-item.manage section.com-frame
  border-color: #4c96f3

.project-item.selected section.com-frame
  box-shadow: 0 0 1px rgba(150, 148, 148, 0.7)

/*********************project end*************************/
/*********************scroll start*************************/
::-webkit-scrollbar
  width: 5px
  height: 5px

::-webkit-scrollbar-track
  /* -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); */
  background: rgba(0,0,0,0.1)
  border-radius: 5px

::-webkit-scrollbar-thumb
  border-radius: 5px
  background: rgba(0,0,0,0.2)
  /* -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5); */

::-webkit-scrollbar-thumb:window-inactive
  background: rgba(0,0,0,0.4)

/*********************scroll end*************************/
/*********************pop start*************************/
.normal-close
  display: inline-block
  transform: rotate(45deg)
  transition: transform ease 500ms
  transform-origin: center center
  cursor: pointer

.normal-close:hover
  transform: rotate(405deg)

.normal-close:before
  content: ''
  height: 15px
  display: inline-block
  border-right: 1px solid #666666
  position: relative
  left: 8px

.normal-close:after
  content: ''
  width: 15px
  height: 15px
  display: inline-block
  border-bottom: 1px solid #666666
  position: relative
  bottom: 7px

.pop-frame
  position: fixed
  top: 0
  left: 0
  height: 100%
  width: 100%
  z-index: 999

.pop-body
  background-color: #ffffff
  min-width: 300px
  text-align: center
  border: 1px solid #cccccc
  padding: 8px 0
  box-shadow: 0 0 10px rgba(150, 148, 148, 0.7)

.pop-body>header
  text-align: left
  padding: 0 10px
  position: relative

.pop-body>header>i.normal-close
  position: absolute
  right: 9px

.pop-body>article
  min-height: 50px
  padding: 8px

/*********************pop end*************************/
