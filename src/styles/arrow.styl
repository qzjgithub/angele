/**
  ar = arrow
  li = line
  cl = color

  rtag = right angle
 */
//箭头线颜色
ar_li_cl = #999999

//箭头线
ar_li = 1px solid ar_li_cl

/**
  生成默认向下的箭头
  w 总箭头宽度，d 一边箭头倾斜角度
 */
arrow(w,d)
  display: block
  margin: auto
  width: w px
  &:before
    content: ''
    border-bottom: ar_li
    width: (w/2)px
    transform: rotate(d deg)
    display: inline-block
    transform-origin: right bottom
  &:after
    content: ''
    border-bottom: ar_li
    width: (w/2)px
    transform: rotate(- d deg)
    display: inline-block
    transform-origin: left bottom


//大箭头
.big-arrow
  arrow(20,30)

//中等箭头
.middle-arrow
  arrow(16,45)

//表示收缩折叠的图标
.fold-arrow
  &>.fa-up
    arrow(14,30)
    border-bottom: pn_bd
    margin-bottom: 1px
    height: 6px
    &:before,&:after
      position: relative
      bottom:9px
  &>.fa-down
    arrow(14,30)
    border-bottom: pn_bd
    height: 6px
    transform: rotate(180deg)
    &:before,&:after
      position: relative
      bottom: 9px
/**
  生成边线构成的箭头,箭头构成角度一定是直角
  w 箭头一边的宽度 d 整个箭头旋转角度
 */
rtagArrow(w,d)
  display: inline-block
  height: w px
  width: w px
  border-right: fm_bd
  border-bottom: fm_bd
  transform: rotate(d deg)

//默认直角箭头样式
.rtag-arrow
  rtagArrow(5,45)

/**
  带尾部的箭头
 */
tailArrow(w,d,tw,td)
  rtagArrow(w,d1)
  display: block
  &:before
    content: ''
    display: block
    width: tw px
    transform: rotate(td deg)
    transform-origin: left bottom
    border-bottom: fm_bd
    position: relative
    bottom: 0.5px

//默认带尾箭头样式
.tail-arrow
  tailArrow(8,0,11,45)

/**
  生成十字
 */
cross(w)
  display: inline-block
  &:before
    content: ''
    height: w px
    display: inline-block
    border-right: fm_bd
    position: relative
    left: (w/2 + 0.5)px
  &:after
    content: ''
    width: w px
    display: inline-block
    border-bottom: fm_bd
    position: relative
    bottom: (w/2 - 0.5)px
